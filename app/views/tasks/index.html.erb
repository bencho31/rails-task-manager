<h1>List your task ! </h1>

<ul>
  <% @tasks.each do |task| %>
  <li>
    <%= link_to task.title, task_path(task)  %>
    <%= link_to 'Edit', edit_path(task)  %>
    <%= link_to 'Delete', task_path(task), method: :delete, data: { confirm: "Are you sure?" } %>
  </li>
<% end %>
</ul>

<%= link_to "Add Task", tasks_new_path %>



